# ============== OpenRouter (Recommended) ==============
# Single API key for Gemini 2.5, GPT-4o, Voxtral, and more
OPENROUTER_API_KEY="your-openrouter-api-key"

# Default model for openrouter_transcribe tool
# Shorthands: gemini-flash, gemini-pro, gpt-4o-audio, voxtral-small, voxtral-mini
# Or full model ID like "google/gemini-2.5-flash-preview-05-20"
OPENROUTER_DEFAULT_MODEL="gemini-flash"

# ============== Direct API Keys (Optional) ==============
# Only needed if using legacy direct API tools

# Mistral API (for voxtral_transcribe tool)
MISTRAL_API_KEY="your-mistral-api-key"

# Default Voxtral model: voxtral-mini-latest or voxtral-small-latest
VOXTRAL_MODEL="voxtral-mini-latest"

# Google Gemini (for gemini_transcribe tools)
GEMINI_API_KEY="your-gemini-api-key"

# OpenAI (for openai_transcribe tools)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_TRANSCRIPTION_MODEL="gpt-4o-transcribe"

# ============== Transport Configuration ==============
# Transport mode: 'stdio' (default) or 'sse' (for remote connections via MetaMCP)
MCP_TRANSPORT="stdio"

# Port for SSE transport (only used when MCP_TRANSPORT=sse)
MCP_PORT="3000"
